{
  "name": "aumet-admin-app-development",
  "private": true,
  "version": "0.0.1",
  "description": "backend",
  "scripts": {
    "nodemon": "nodemon start",
    "start": "cross-env NODE_CONFIG_DIR=./src/config ts-node ./src/bin/www.ts",
    "start-dist": "cd dist/public && yarn install && cd ../.. && cross-env NODE_CONFIG_DIR=./dist/config node ./dist/bin/www",
    "build": "gulp build",
    "lint-noFix": "gulp lint-noFix",
    "lint": "npm run prettier && npm run tslint",
    "compiled-test-in-gitlab-runner": "cross-env NODE_APP_INSTANCE=test cross-env NODE_CONFIG_DIR=./dist/src/config jest --config=./ci-jest.config.json --forceExit",
    "test": "npm run reset-test-db && NODE_CONFIG_DIR=./src/config jest --forceExit --detectOpenHandles",
    "copy-assets": "gulp copy-assets && gulp replace",
    "clean-build": "gulp clean-build",
    "compile": "tsc",
    "prettier": "prettier '{src/**/*.*,typings/**/*.*,tests/**/*.*}' --write",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t stylish --fix 'src/**/*.ts'",
    "reset-test-db": "NODE_CONFIG_DIR=./src/config node tests/reset.js",
    "devapi-miwago": "export NODE_APP_INSTANCE=beta && node bin/www.js"
  },
  "repository": {
    "type": "git"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "aws-sdk": "^2.267.1",
    "bcrypt": "^2.0.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.3",
    "config": "^1.30.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "express-query-boolean": "^2.0.0",
    "express-query-int": "^3.0.0",
    "express-validator": "^5.2.0",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.3.0",
    "lme": "^1.5.3",
    "mongoose": "^5.2.0",
    "morgan": "^1.9.0",
    "public-ip": "^2.4.0",
    "serialize-error": "^2.1.0",
    "shortid": "^2.2.8",
    "swagger-jsdoc": "^1.9.7",
    "url-pattern": "^1.0.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/bluebird": "^3.5.21",
    "@types/body-parser": "^1.17.0",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/del": "^3.0.1",
    "@types/ejs": "^2.6.0",
    "@types/express": "^4.16.0",
    "@types/gulp": "^4.0.5",
    "@types/gulp-rename": "^0.0.33",
    "@types/gulp-replace": "^0.0.31",
    "@types/html-minifier": "^3.5.2",
    "@types/jest": "^23.1.4",
    "@types/joi": "^13.3.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.0.18",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.1",
    "@types/public-ip": "^2.3.0",
    "@types/run-sequence": "^0.0.30",
    "@types/serialize-error": "^2.1.0",
    "@types/shortid": "^0.0.29",
    "@types/supertest": "^2.0.4",
    "@types/swagger-jsdoc": "^0.0.2",
    "del": "^3.0.0",
    "git-last-commit": "^0.3.0",
    "gulp": "^3.9.1",
    "gulp-cli": "^2.0.1",
    "gulp-exec": "^3.0.1",
    "gulp-markdown": "^2.0.1",
    "gulp-prettier-plugin": "^1.3.0",
    "gulp-rename": "^1.3.0",
    "gulp-replace": "^1.0.0",
    "gulp-tslint": "^8.1.3",
    "gulp-typescript": "^5.0.0-alpha.2",
    "html-minifier": "^3.5.18",
    "jest": "^23.2.0",
    "markdown-table": "^1.1.2",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7",
    "run-sequence": "^2.2.1",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ],
    "testEnvironment": "node"
  }
}
